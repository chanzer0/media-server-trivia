<?xml version="1.0"?>
<Container version="2">
  <Name>media-server-trivia</Name>
  <Repository>chanzero/media-server-trivia:latest</Repository>
  <Registry>https://hub.docker.com/r/chanzero/media-server-trivia</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/chanzer0/media-server-trivia</Support>
  <Project>https://github.com/chanzer0/media-server-trivia</Project>
  <Overview>Media Server Trivia is a web-based trivia game that generates questions from your Plex media library. Features include cast guessing, release year challenges, poster identification, and frame color analysis using computer vision.</Overview>
  <Category>MediaApp:Other</Category>
  <WebUI>http://[IP]:[PORT:5054]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/chanzer0/media-server-trivia/main/unraid-template.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/chanzer0/media-server-trivia/main/app/static/favicon.ico</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires/>
  <Config Name="WebUI Port" Target="5054" Default="5054" Mode="tcp" Description="Port for the web interface" Type="Port" Display="always" Required="true" Mask="false">5054</Config>
  <Config Name="Plex Base URL" Target="PLEX_BASE_URL" Default="http://[IP]:32400" Mode="" Description="Your Plex server URL (e.g., http://192.168.1.100:32400)" Type="Variable" Display="always" Required="true" Mask="false"/>
  <Config Name="Plex Token" Target="PLEX_TOKEN" Default="" Mode="" Description="Your Plex authentication token" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="TMDb API Key" Target="TMDB_API_KEY" Default="" Mode="" Description="The Movie Database API key (optional, for enhanced metadata)" Type="Variable" Display="always" Required="false" Mask="true"/>
  <Config Name="Flask Run Port" Target="FLASK_RUN_PORT" Default="5054" Mode="" Description="Internal Flask port (should match WebUI Port)" Type="Variable" Display="advanced" Required="false" Mask="false">5054</Config>
  <Config Name="Media Path" Target="MEDIA_PATH" Default="/data/media" Mode="" Description="Container path to media files (DO NOT CHANGE)" Type="Variable" Display="advanced" Required="false" Mask="false">/data/media</Config>
  <Config Name="Media Directory" Target="/data/media" Default="/mnt/user/media" Mode="ro" Description="Path to your media files on the host (where your movies and TV shows are stored)" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/media</Config>
  <Config Name="AppData" Target="/app/cache" Default="/mnt/user/appdata/media-server-trivia" Mode="rw" Description="Application data directory for cache and processing files" Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/media-server-trivia</Config>
</Container>